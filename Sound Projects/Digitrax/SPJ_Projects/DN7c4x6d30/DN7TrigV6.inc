TRIG_BX1_ON	EQU	0x29	;30-F30:
TRIG_BX2_ON	EQU	0x2A	;31-F31:
TRIG_BX3_ON	EQU	0x2B	;32-F32:

TRIG_BX4_ON	EQU	0x2C	;33-F33:
TRIG_BX5_ON	EQU	0x2D	;34-F34:
TRIG_BX6_ON	EQU	0x2E	;35-F35:
TRIG_BX7_ON	EQU	0x2F	;36-F36:

