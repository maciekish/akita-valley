;						SILENCE,loop_till_UNCOUPLE_OFF
TRIG_ALTGCS_ON		EQU	0x19	;10-F10:
TRIG_COUPLE_ON		EQU	0x1A	;11-F11:
TRIG_FLANGES_ON		EQU	0x1B	;12-F12:
;						WHEEL_FLANGE2,loop_till_FLANGES_OFF

TRIG_SAND_ON		EQU	0x14	;13-F13: BYTE 2, bit 4, 
TRIG_ESTOP_ON		EQU	0x15	;14-F14:
TRIG_FAND_ON		EQU	0x16	;15-F15:
TRIG_USERSND2_ON	EQU	0x17	;16-F16:

TRIG_SF17X			EQU	0x1C		;byte 3, bit 4
TRIG_GMAINT_ON		EQU	0x1D	;18-F18:
TRIG_AMAINT_ON		EQU	0x1E	;19-F19:
TRIG_LETOFF_ON		EQU	0x1F	;20-F20:

;
TRIG_DRYER_ON		EQU	0x20	;21-F21: expanded FUNCTIONS
TRIG_RUN1_ON		EQU	0x21	;22-F22:
TRIG_USERSND_ON		EQU	0x22	;23-F23:
TRIG_REVS_ON		EQU	0x23	;24-F24:

TRIG_FANS_ON	EQU	0x24	;25-F25:
TRIG_TBRAKE_ON		EQU	0x25	;26-F26:
TRIG_AXGEN_ON		EQU	0x26	;27-F27:
TRIG_RUN8_ON		EQU	0x27	;28-F28:

;----------------FIRST 8 bsc regs reserved
