
;MAP V6 FUNCTION VALUES TO TRIGGER:	SR7TrigV6.inc
TRIG_LIGHTS_ON		EQU	0x0C		;0-F0: headlight/F0 state
;						DYNAMO_SUSTAIN,loop_till_LIGHTS_OFF

TRIG_BELLS_ON		EQU	0x08		;1-F1: change event
TRIG_HORNS_ON		EQU	0x09		;2-F2: byte 1, bit1
